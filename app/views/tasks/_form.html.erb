<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :task_name %>
    <%= f.input :project_id %>
    <%= f.input :user_id %>
    <%= f.input :time_needed %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
